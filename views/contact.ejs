<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Contact Us</title>
  </head>
  <body class="bg-gray-100">
    <!-- Begin Header -->
    <%- include('partials/header.ejs') %>
    <!-- End Header -->
    <!-- Begin Main -->
    <main class="container mx-auto mt-8 px-4">
      <h1 class="text-4xl font-bold text-center mb-8">Contact Us</h1>

      <div class="max-w-md mx-auto bg-white rounded-lg shadow-md py-5 px-6">
        <!-- Begin Form -->
        <form
          method="post"
          id="contact-form"
          action="/contact"
          class="flex flex-col justify-center gap-3"
        >
          <div class="w-full">
            <label for="name" class="">Name</label>
            <input
              type="text"
              id="username"
              name="username"
              required
              class="w-full p-2 text-lg text-gray-900 bg-transparent rounded-md border-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-green-600"
            />
          </div>
          <div class="w-full">
            <label for="email" class="">Email</label>
            <input
              type="email"
              name="email"
              required
              class="w-full p-2 text-lg text-gray-900 bg-transparent rounded-md border-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-green-600"
            />
          </div>
          <div class="w-full">
            <label for="message" class="">Message</label>
            <textarea
              name="message"
              required
              class="w-full p-2 min-h-10 max-h-24 text-gray-900 rounded-md border-2 appearance-none focus:outline-none focus:ring-0 focus:border-green-600"
            ></textarea>
          </div>
          <div>
            <button
              id="submit-btn"
              type="submit"
              class="w-full font-bold py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
            >
              Send Message
            </button>
          </div>
        </form>
        <!-- End Form -->
      </div>
    </main>
    <!-- End Main -->
    <!-- Begin Footer -->
    <%- include('partials/footer.ejs') %>
    <!-- End Footer -->

    <!-- Begin Script -->
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>
    <script src="/scripts/script.js"></script>
    <!-- End Script -->
  </body>
</html>
